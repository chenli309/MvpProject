<?xml version="1.0" encoding="utf-8"?>
<com.jiajiabang.view.AutoConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_status_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cbf8f8f8"
    android:orientation="vertical">
    <!--加载框-->
    <ProgressBar
        android:id="@+id/pb_status_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:layout_marginBottom="@dimen/x20"
        app:layout_constraintBottom_toTopOf="@+id/tv_status_loading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <!--提示信息-->
    <TextView
        android:id="@+id/tv_status_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:text="@string/multiple_status_loading_view_hint"
        android:textColor="@color/color_cb999999"
        android:textSize="@dimen/f15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</com.jiajiabang.view.AutoConstraintLayout>